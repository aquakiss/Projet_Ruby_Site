<p id="notice"><%= notice %></p>

<p>
  <strong>Map:</strong>
  <%= @map.map_id %>
</p>

<p>
  <strong>Map url:</strong>
  <%= @map.map_url %>
</p>

<p>
	<%= cl_image_tag(@map.map_url) %>
</p>

  <ul>
  <%= simple_form_for :points do |points_form| %>
  <li>
        <%= points_form.label :map_id %>
        <%= points_form.label "#{@map.map_id}" %>

        <%= points_form.label :x %>
        <%= points_form.text_field :x %>
 
        <%= points_form.label :y %>
        <%= points_form.text_field :y %>

        <%= points_form.hidden_field(:photo_url_cache) %>
        <%= points_form.file_field(:photo_url) %>
    </li>

    <div class="form-actions">
      <%= points_form.button :submit %>
    </div>

  <% end %>
  </ul>

<%= link_to 'Ajouter un point', new_point_path(@map) %> | 
